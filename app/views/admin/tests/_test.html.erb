<tr>
  <td>
    <%= content_tag :span, class: 'test-title', data: { test_id: test.id } do %>
      <%= link_to test.title, admin_test_path(test) %>
    <% end %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test) %></td>
  <td class="align-middle"><%= test.category.title %></td>
  <td class="align-middle"><%= test.author.name %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle">
    <%= link_to t('.edit'), edit_admin_test_path(test),
                data: { test_id: test.id},
                class: 'btn btn-primary form-inline-link' %>
  </td>
  <td class="align-middle"><%= link_to t('.delete'), admin_test_path(test), method: :delete,
                                       data: { confirm: t('.confirm') },class: 'btn btn-primary' %></td>
</tr>
