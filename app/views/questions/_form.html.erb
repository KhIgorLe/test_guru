<h1><%= question_header(@test, @question) %></h1>
<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :body %>
    <%= form.text_field :body, required: true %>
  </p>

  <p><%= form.submit (form.object.new_record? ? "Create" : "Update") %></p>
<% end %>
