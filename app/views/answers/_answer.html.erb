<tr>
  <td><%= answer.body %></td>
  <td><%= "Correct" if answer.correct? %></td>
  <td><%= link_to "Edit", edit_answer_path(answer) %></td>
  <td><%= link_to "Show", answer_path(answer) %></td>
  <td><%= link_to "Delete", answer_path(answer),
                  method: :delete, data: { confirm: "Are you sure?" } %></td>
</tr>
